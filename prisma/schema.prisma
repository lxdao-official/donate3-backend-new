// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Donation {
  id              Int     @id @default(autoincrement())
  from            String
  to              String
  blockNumber     Int
  blockHash       String
  transactionHash String
  money           String
  timestamp       String
  chainId         Int
  message         String?
  erc20           String
  uid             String?
  amount          String?
  price           String?
  decimals        Int?
}

model Setting {
  id          Int     @id @default(autoincrement())
  address     String  
  setting     String
  type        Int?
  color       String?
  name        String?
  avatar      String?
  description String?
  twitter     String?
  telegram    String?
}
